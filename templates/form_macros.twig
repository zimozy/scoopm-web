{% macro textInput(title, name, value='') %}
    <div class="form-group row">
        <label for="{{name}}" class="col-sm-3 col-form-label ">{{title}}</label>
        <div class="col-sm">
            <input id="{{name}}" name="{{name}}" type="text" class="form-control" value="{{value}}" placeholder="{{title}}" required/>
            <div class="invalid-feedback">Required</div>
        </div>
    </div>
{% endmacro %}

{% macro password(title, name, value='') %}
    <div class="form-group row">
        <label for="{{name}}" class="col-sm-3 col-form-label ">{{title}}</label>
        <div class="col-sm">
            <input id="{{name}}" name="{{name}}" type="password" class="form-control" value="{{value}}" placeholder="{{title}}" maxlength="20" required/>
            <small class="form-text text-muted">Password must be between 6 and 20 characters</small>
        </div>
    </div>
{% endmacro %}

{% macro confirm(title, name, value='') %}
    <div class="form-group row">
        <label for="{{name}}" class="col-sm-3 col-form-label ">{{title}}</label>
        <div class="col-sm">
            <input id="{{name}}" name="{{name}}" type="password" class="confirm-password form-control" value="{{value}}" placeholder="{{title}}" maxlength="20" required/>
            <small class="form-text text-invalid d-none">Passwords don't match</small>
        </div>
    </div>
{% endmacro %}

{% macro email(title, name, value='') %}
    <div class="form-group row">
        <label for="{{name}}" class="col-sm-3 col-form-label ">{{title}}</label>
        <div class="col-sm">
            <input id="{{name}}" name="{{name}}" type="email" class="email form-control" value="{{value}}" placeholder="{{title}}" required/>
            <div class="invalid-feedback">Required</div>
        </div>
    </div>
{% endmacro %}

{% macro upload(title, name, hint='') %}
    <div class="form-group row">
        <label for="{{name}}" class="col-sm-3 col-form-label ">{{title}}</label>
        <div class="col-sm">
            <input type="file" name="{{name}}" class="form-control-file"/>
            <small class="form-text text-muted">{{hint|raw}}</small>
        </div>
    </div>
{% endmacro %}

{% macro select(title, name, options) %}
    <div class="form-group row">
        <label for="{{name}}" class="col-sm-3 col-form-label ">{{title}}</label>
        <div class="col-sm">
            <select>
                {% for option in options %}
                    <option value="{{option.name}}">{{option.title}}</option>    
                {% endfor %}
            </select>
        </div>
    </div>
{% endmacro %}

