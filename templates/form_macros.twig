{% macro heading(text) %}
    <div class="row">
        <div class="col-sm-9 offset-sm-3">
                <h4>{{text}}</h4>
        </div>
    </div>
{% endmacro %}

{% macro subHeading(text) %}
    <div class="row">
        <div class="col-sm-9 offset-sm-3">
                <h5 class="text-muted">{{text}}</h5>
        </div>
    </div>
{% endmacro %}

{% macro buttons(thisPage, goingBack=false, submitting=false) %}
    <br>
    <div class="form-group" style="text-align:center;">

        {% if goingBack %}
            <button id="{{thisPage}}Back" class="back-button btn btn-outline-secondary mr-5 px-5">Back</button>
        {% endif %}

        {% if not submitting %}
            <button id="{{thisPage}}Next" class="next-button btn btn-outline-primary px-5">Next</button>
        {% else %}
            <input type="submit" class="btn btn-primary px-5" value="Submit"/>
        {% endif %}

    </div>
{% endmacro %}
